<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecordBy" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="AddExeButton" Content="Add Game" Click="AddExeButton_Click" Width="100" HorizontalAlignment="Left" Margin="5"/>
        <ListBox Grid.Row="1" Name="ExeListBox" Margin="5"/>
        <Label Grid.Row="2" Name="StatusLabel" Content="Status: Idle" Margin="5"/>
        <Slider Grid.Row="3" Name="BufferSlider" Minimum="1" Maximum="20" Value="5" Width="200" HorizontalAlignment="Left" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center" Margin="5"/>
    </Grid>
</Window>
